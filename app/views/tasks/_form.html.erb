<%= form_with model: task,
              url: (task.id ? task_url(id: task.id) : tasks_url),
              method: (task.id ? :patch : :post),
              id: "task_form",
              data: { controller: "autosave", "autosave-target": "form", action: "ajax:success->autosave#success ajax:error->autosave#error" },
              class: "w-full flex flex-col justify-between" do |f|
%>
  <div class="relative" data-controller="task-dropdown">
    <%= f.hidden_field :status, data: { action: "change->autosave#save", "task-dropdown-target": "value" } %>
    <div data-action="click->task-dropdown#toggle click@window->task-dropdown#hide" class="inline-block select-none">
      <div class="p-2 flex items-center rounded text-sm text-gray-600 transition cursor-pointer hover:bg-gray-100">
        <span class="pr-4" data-task-dropdown-target="title"><%= task.status.titleize %></span>
        <%= heroicon "chevron-down", options: { class: "h-4 w-4 inline-block" } %>
      </div>
    </div>

    <div data-task-dropdown-target="menu" class="absolute left-0 hidden" style="z-index: 9997;">
      <div class="bg-white shadow rounded border">
        <% Task::STATUSES.each do |status| %>
          <div class="w-32 pl-8 px-4 py-2 flex items-center rounded text-sm cursor-pointer hover:bg-gray-100" data-action="click->task-dropdown#toggle click->task-dropdown#set" data-value="<%= status %>">
            <%= status.titleize %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%= f.text_field :title,
                   placeholder: "New task",
                   class: "w-full font-bold text-3xl text-gray-900 transition hover:bg-gray-100 focus:outline-none #{'bg-red-100' if task.errors[:title].any?}",
                   data: { action: "blur->autosave#save" },
                   autocomplete: "off"
  %>


  <div class="flex justify-left mt-4">
    <div class="relative" data-controller="task-dropdown">
      <%= f.hidden_field :type, data: { action: "change->autosave#save", "task-dropdown-target": "value" } %>
      <div data-action="click->task-dropdown#toggle click@window->task-dropdown#hide" data-task-dropdown-target="button" class="inline-block select-none">
        <div class="p-2 flex items-center rounded text-sm text-gray-600 transition cursor-pointer hover:bg-gray-100">
          <div data-task-dropdown-target="title">
            <%= heroicon icon_for(task.type), options: { class: "h-4 w-4 inline-block text-#{color_for(task.type)}" } %>
            <span class="ml-4 text-<%= color_for(task.type) %>"><%= task.type.capitalize %></span>
          </div>
          <%= heroicon "chevron-down", options: { class: "ml-4 h-4 w-4 inline-block" } %>
        </div>
      </div>

      <div data-task-dropdown-target="menu" class="absolute left-0 hidden" style="z-index: 9997;">
        <div class="bg-white shadow rounded border">
          <% Task::TYPES.each do |type| %>
            <div class="w-32 pl-8 px-4 py-2 flex items-center rounded text-sm cursor-pointer hover:bg-gray-100" data-action="click->task-dropdown#toggle click->task-dropdown#set" data-value="<%= type %>">
              <%= heroicon icon_for(type), options: { class: "h-4 w-4 inline-block text-#{color_for(type)}" } %>
              <span class="ml-4 text-<%= color_for(type) %>"><%= type.capitalize %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="ml-2 p-2 flex items-center rounded text-sm text-gray-400 cursor-pointer hover:bg-gray-100 focus:outline-none">
      <%= heroicon "calendar", options: { class: "h-4 w-4 inline-block" } %>
      <span class="ml-2">No deadline</span>
      <%= heroicon "chevron-down", options: { class: "ml-4 h-4 w-4 inline-block" } %>
    </div>

    <div class="relative" data-controller="task-dropdown">
      <div data-action="click->task-dropdown#toggle click@window->task-dropdown#hide" class="inline-block select-none">
        <div class="ml-2 p-2 flex items-center rounded text-sm text-gray-400 hover:bg-gray-100 focus:outline-none cursor-pointer">
          <%= f.hidden_field :user_id, value: task.user_id, data: { action: "change->autosave#save", "task-dropdown-target": "value" } %>
          <div class="text-gray-<%= task.user ? "600" : "400" %>" data-task-dropdown-target="title">
            <%= heroicon "user", options: { class: "h-4 w-4 inline-block" } %>
            <span class="pl-2 pr-4">
              <%= task.user&.name || "No assignee" %>
            </span>
          </div>
          <%= heroicon "chevron-down", options: { class: "h-4 w-4 inline-block" } %>
        </div>
      </div>
      <div data-task-dropdown-target="menu" class="absolute left-0 hidden">
        <div class="bg-white shadow rounded border">
          <% if task.user %>
            <div class="w-64 px-4 py-2 flex items-center rounded text-sm cursor-pointer hover:bg-gray-100" data-action="click->task-dropdown#toggle click->task-dropdown#set" data-value="">
              <div class="text-gray-400">
                <%= heroicon "user", options: { class: "h-4 w-4 inline-block" } %>
                <span class="pl-2 pr-4">No assignee</span>
              </div>
            </div>
          <% end %>
          <% @users.each do |user| %>
            <div class="w-64 px-4 py-2 flex items-center rounded text-sm cursor-pointer hover:bg-gray-100" data-action="click->task-dropdown#toggle click->task-dropdown#set" data-value="<%= user.id %>">
              <div class="text-gray-600">
                <%= heroicon "user", options: { class: "h-4 w-4 inline-block" } %>
                <span class="pl-2 pr-4"><%= user.name %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <%= f.text_area :description,
                  placeholder: "Description of your task...",
                  class: "w-full h-28 mt-4 text-gray-900 resize-none transition hover:bg-gray-100 focus:outline-none",
                  data: { action: "blur->autosave#save" },
                  autocomplete: "off"
  %>

  <div class="w-full mt-4 flex justify-between">
    <span class="text-gray-400 text-sm transition" data-autosave-target="status"></span>

    <%= link_to "#", data: { action: "click->task#delete", id: task.id }, class: "w-32 p-2 text-center rounded-sm transition text-gray-600 text-red-400 hover:bg-red-100 hover:text-red-600" do %>
      <%= heroicon "trash", options: { class: "h-4 w-4 ml-auto inline-block" } %> Delete task
    <% end %>
  </div>
<% end %>
